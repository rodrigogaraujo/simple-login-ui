{
  "compilerOptions": {
    "target": "es5",
    "module": "umd",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true,
    "lib": [
        "dom",
        "es2015",
        "es2016"
    ]
  }
}
